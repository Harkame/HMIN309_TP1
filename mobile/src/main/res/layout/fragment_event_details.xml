<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/colorAccent"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/eventDetailsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/example_my_event"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:inputType="text"
                    tools:ignore="Autofill" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/eventDetailsNameError"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_error"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@color/colorAccent"
                android:textSize="32sp" />

            <Button
                android:id="@+id/eventDetailsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textColor="@color/colorAccent"
                android:textSize="32sp" />

            <Button
                android:id="@+id/eventDetailsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@color/colorAccent"
                android:textSize="32sp" />

            <Spinner
                android:id="@+id/eventDetailsType"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/sport"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/colorAccent"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/eventDetailsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/example_training"
                android:singleLine="true"
                android:textSize="22sp"
                android:inputType="text"
                tools:ignore="Autofill" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/eventDetailsModify"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="@string/modify"
                android:textColor="@color/white"
                android:background="@drawable/green_button"
                android:layout_alignParentStart="true"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/eventDetailsDelete"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:background="@drawable/red_button"
                android:layout_alignParentEnd="true"
                tools:ignore="ButtonStyle" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>